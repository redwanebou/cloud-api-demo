pipeline {
  agent {
    dockerfile {
      filename 'Dockerfile'
      args '--name testenvironment -i --entrypoint='
    }
  }
  tools { nodejs "redwaneJS" }
  stages {
    stage('Npm Install') {
      steps {
        input message: 'echo "Frontend package.json installeren"'
        //sh 'cd ./AutoAPI/ClientApp && npm install'
      }
    }

    stage('Deploy to production enviroment'){
     when {
            branch 'master'
       }
       steps {
          input message: 'echo "Project is succesfull in production enviroment"'
       }
     }


    stage('Deploy to test enviroment'){
     when {
            branch 'test'
       }
       steps {
          input message: 'echo "Project is succesfull in test enviroment'
       }
     }
   }
 }
